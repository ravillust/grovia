# =================================
# GROVIA BACKEND - Environment Variables Template
# =================================
# Copy this file to .env and fill in your values
# cp .env.example .env (Linux/Mac)
# copy .env.example .env (Windows)

# =================================
# DATABASE CONFIGURATION
# =================================
# MySQL Database Connection
DATABASE_URL=mysql+mysqlclient://root:password@localhost:3306/grovia_db
MYSQL_SERVER=localhost
MYSQL_USER=root
MYSQL_PASSWORD=password
MYSQL_DB=grovia_db
MYSQL_PORT=3306

# =================================
# SECURITY & AUTHENTICATION
# =================================
# Generate a secure random key for production!
# You can use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# Encryption key for sensitive data (32 characters)
ENCRYPTION_KEY=your-32-character-encryption-key

# =================================
# GOOGLE OAUTH CONFIGURATION
# =================================
# Get credentials from: https://console.cloud.google.com/apis/credentials
# Create OAuth 2.0 Client ID for Web Application
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
GOOGLE_REDIRECT_URI=http://localhost:5173/auth/google/callback

# =================================
# GEMINI AI API
# =================================
# Get your free API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# =================================
# CLOUDINARY (Production Image Storage)
# =================================
# Get free account: https://cloudinary.com/users/register/free
# Free tier: 25GB storage + 25GB bandwidth/month
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
USE_CLOUDINARY=false

# =================================
# EMAIL SMTP CONFIG FOR FASTAPI-MAIL (GMAIL)
# =================================
MAIL_USERNAME=your_gmail_address@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM=your_gmail_address@gmail.com
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_STARTTLS=True
MAIL_SSL_TLS=False

# =================================
# APPLICATION SETTINGS
# =================================
APP_NAME=Grovia API
PROJECT_NAME=Grovia Backend
VERSION=1.0.0
API_V1_PREFIX=/api/v1
DEBUG=True

# =================================
# CORS SETTINGS
# =================================
# Add your frontend URLs here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174

# =================================
# FILE UPLOAD SETTINGS
# =================================
MAX_UPLOAD_SIZE=5242880
MAX_IMAGE_SIZE=10485760
UPLOAD_DIR=uploads

# =================================
# ML MODEL SETTINGS
# =================================
MODEL_PATH=ml_models/cnn_model.h5
LABELS_PATH=ml_models/labels.json
IMAGE_SIZE=224,224

# =================================
# LOGGING SETTINGS
# =================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# =================================
# OPTIONAL SETTINGS
# =================================
# Uncomment if needed

# Email Configuration
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
